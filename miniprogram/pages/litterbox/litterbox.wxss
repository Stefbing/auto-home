/* 容器样式 */
.container { 
  padding: 20rpx; 
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  background: #007aff;
  color: white;
  border: none;
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.refresh-btn[loading] {
  background: #cccccc;
}

/* 卡片容器 */
.card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 统计行 */
.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.stat-row:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 32rpx;
  font-weight: bold;
  color: #007aff;
}

/* 信息卡片 */
.info-card {
  background: #fffbe6;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #faad14;
}

.info-text {
  font-size: 26rpx;
  color: #d48806;
  line-height: 1.5;
}

/* 错误卡片 */
.error-card {
  background: #fff1f0;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #ff4d4f;
}

.error-text {
  font-size: 26rpx;
  color: #cf1322;
  line-height: 1.5;
}

/* 按钮样式 */
button[type="warn"] {
  width: 100%;
  background: #ff4d4f;
  color: white;
  border: none;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

button[type="warn"]:disabled {
  background: #cccccc;
  color: #999999;
}

/* 加载状态 */
.loading-text {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}
