.container { padding: 20px; }
.card {
  background: #fff;
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.title { font-size: 18px; font-weight: bold; margin-bottom: 15px; }
.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}
.plan-item {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}
